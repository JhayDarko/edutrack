<% title = `Rendimiento - ${curso.titulo}` %>

<h2 class="mb-4 text-primary fw-bold">
  <i class="fa-solid fa-chart-pie me-2"></i> Rendimiento - <%= curso.titulo %>
</h2>

<div class="table-responsive">
  <table class="table table-striped table-hover align-middle">
    <thead class="table-primary">
      <tr>
        <th>Estudiante</th>
        <th>Nota</th>
        <th>Estado</th>
      </tr>
    </thead>
    <tbody>
      <% rendimiento.forEach(r => { %>
        <tr>
          <td><%= r.estudiante %></td>
          <td><%= r.nota %></td>
          <td>
            <% if (r.nota >= 60) { %>
              <span class="badge bg-success">Aprobado</span>
            <% } else { %>
              <span class="badge bg-danger">Reprobado</span>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<a href="/cursos/mis-cursos" class="btn btn-outline-primary mt-4">
  <i class="fa-solid fa-arrow-left me-2"></i> Volver a Mis Cursos
</a>
