<% title='Dashboard' %>

<h2 class="mb-4 text-primary fw-bold"><i class="fa-solid fa-graduation-cap me-2"></i>Mis Cursos</h2>

<div class="row g-4">
  <% cursos.forEach(c => { %>
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm border-0">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title text-dark mb-2">
            <i class="fa-solid fa-book me-2 text-secondary"></i><%= c.titulo %>
          </h5>
          <p class="card-text text-muted flex-grow-1"><%= c.descripcion %></p>

          <!-- Barra de progreso -->
          <div class="mb-3">
            <small class="text-muted">Progreso:</small>
            <div class="progress" style="height: 8px;">
              <div class="progress-bar bg-success" role="progressbar" style="width: <%= c.progreso %>%;" aria-valuenow="<%= c.progreso %>" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <small class="text-end d-block mt-1"><strong><%= c.progreso %>%</strong> completado</small>
          </div>

          <a href="/curso/<%= c.id %>?userId=<%= user.id %>" class="btn btn-primary mt-auto w-100">
            <i class="fa-solid fa-arrow-right me-1"></i> Ver Curso
          </a>
        </div>
      </div>
    </div>
  <% }) %>
</div>
