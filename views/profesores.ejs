<% title = 'Mis Cursos' %>

<h2 class="mb-4 text-primary fw-bold"><i class="fa-solid fa-book-open me-2"></i>Mis Cursos</h2>

<div class="row g-4 mb-4">
  <% cursos.forEach(c => { %>
    <div class="col-md-6">
      <div class="card p-3 shadow-sm h-100 d-flex flex-column justify-content-between">
        <h5 class="mb-3 text-truncate" title="<%= c.titulo %>"><%= c.titulo %></h5>
        <a href="/cursos-rendimiento/<%= c.id %>" class="btn btn-outline-primary btn-sm mt-auto fw-semibold">
          <i class="fa-solid fa-chart-bar me-1"></i> Ver Rendimiento
        </a>
      </div>
    </div>
  <% }) %>
</div>

<div class="d-flex justify-content-end mb-5">
  <a href="/cursos/nuevo" class="btn btn-success btn-lg fw-semibold">
    <i class="fa-solid fa-plus me-2"></i> Crear Curso
  </a>
</div>

<h2 class="mb-4 text-primary fw-bold"><i class="fa-solid fa-graduation-cap me-2"></i>Notas de Estudiantes</h2>

<div class="table-responsive mb-5">
  <table class="table table-striped table-hover align-middle">
    <thead class="table-primary">
      <tr>
        <th>Estudiante</th>
        <th>Curso</th>
        <th>Nota</th>
      </tr>
    </thead>
    <tbody>
      <% notas.forEach(n => { %>
        <tr>
          <td><%= n.estudiante %></td>
          <td><%= n.curso %></td>
          <td><%= n.nota %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<h2 class="mb-4 text-primary fw-bold"><i class="fa-solid fa-upload me-2"></i>Subir Nuevo Curso</h2>

<form method="POST" class="mb-5">
  <div class="mb-3">
    <label for="titulo" class="form-label fw-semibold">Título</label>
    <input id="titulo" name="titulo" class="form-control" required>
  </div>
  <div class="mb-4">
    <label for="descripcion" class="form-label fw-semibold">Descripción</label>
    <textarea id="descripcion" name="descripcion" rows="4" class="form-control" required></textarea>
  </div>
  <button type="submit" class="btn btn-success btn-lg fw-semibold">
    <i class="fa-solid fa-upload me-2"></i> Subir Curso
  </button>
</form>
